<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:touchscreenBlocksFocus="false"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/noLoginLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="You are not logged in, Please Logged in"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/drawer_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtLogin"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/login"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/drawer_title" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/userDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_60sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:singleLine="true"
                            android:text="Pratik Sonawane"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_title" />
                        <!--close icon-->


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <!--close icon-->
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/drawer_subtitle_icon_height"
                            android:layout_height="@dimen/drawer_subtitle_icon_width"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_baseline_local_phone_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="8655883062"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_subtitle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <!--close icon-->
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/drawer_subtitle_icon_height"
                            android:layout_height="@dimen/drawer_subtitle_icon_width"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_baseline_email_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="sonawane.ptk@gmail.com"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_subtitle" />

                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivClose"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_baseline_close_24" />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/drawer_menu_icon_height"
                            android:layout_height="@dimen/drawer_menu_icon_width"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_baseline_home_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHome"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Home"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_menu_label" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/drawer_menu_icon_height"
                            android:layout_height="@dimen/drawer_menu_icon_width"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_baseline_person_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/edProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Edit Profile"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_menu_label" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMyOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/drawer_menu_icon_height"
                            android:layout_height="@dimen/drawer_menu_icon_width"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="My Order"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_menu_label" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/drawer_menu_icon_height"
                            android:layout_height="@dimen/drawer_menu_icon_width"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_baseline_share_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Share With Friends"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_menu_label" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/drawer_menu_icon_height"
                            android:layout_height="@dimen/drawer_menu_icon_width"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btnLogOut"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Log Out"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/drawer_menu_label" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>



