<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_route"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.mobitechs.tejasfruitsnvegetables.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register" />

    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.mobitechs.tejasfruitsnvegetables.view.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login" />

    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.mobitechs.tejasfruitsnvegetables.view.fragment.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_forgotPasswordFragment_to_setPasswordFragment"
            app:destination="@id/setPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/setPasswordFragment"
        android:name="com.mobitechs.tejasfruitsnvegetables.view.fragment.SetPasswordFragment"
        android:label="fragment_set_password"
        tools:layout="@layout/fragment_set_password" >
        <action
            android:id="@+id/action_setPasswordFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_setPasswordFragment_to_login"
            app:destination="@id/login" />
    </fragment>


</navigation>